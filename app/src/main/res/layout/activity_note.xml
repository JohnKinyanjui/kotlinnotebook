<?xml version="1.0" encoding="utf-8"?>
<com.infideap.drawerbehavior.AdvanceDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/ticket"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        app:itemBackground="?attr/ticket"
        android:id="@+id/nav_view"
        android:background="?attr/ticket"
        android:layout_width="wrap_content"
        app:itemIconTint="?attr/item_tint"
        app:itemTextColor="?attr/item_tint"
        android:layout_height="match_parent"
        android:splitMotionEvents="true"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/RobotoTextViewStyle"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_note"
        app:menu="@menu/note_drawer" />

</com.infideap.drawerbehavior.AdvanceDrawerLayout>
