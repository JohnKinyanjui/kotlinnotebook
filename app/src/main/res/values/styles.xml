<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="nav_tint">@color/black</item>
<item name="item_tint">@color/colorPrimaryDark</item>
        <item name="app_bar_color">@color/colorPrimaryDark</item>
        <item name="toolbar_color">@color/white</item>
        <item name="listview_color">@color/white</item>
        <item name="ticket">@color/white</item>
        <item name="title_color">@color/colorPrimaryDark</item>
        <item name="des_color">@color/black</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
    </style>

    <style name="PrivateAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/privatecolorPrimary</item>
        <item name="colorPrimaryDark">@color/privatecolorPrimaryDark</item>
        <item name="colorAccent">@color/privatecolorAccent</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
    </style>
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="app_bar_color">@color/black</item>
        <item name="toolbar_color">@color/black</item>
        <item name="nav_tint">@color/black</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
        <item name="item_tint">@color/colorPrimary</item>
        <item name="listview_color">@color/black</item>
        <item name="ticket">@color/black</item>
        <item name="title_color">@color/colorPrimary</item>
        <item name="des_color">@color/white</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/privatecolorPrimary</item>
        <item name="colorPrimaryDark">@color/privatecolorPrimaryDark</item>
        <item name="colorAccent">@color/privatecolorAccent</item>
        <item name="colorBackgroundFloating">@color/black</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:iconTint" tools:targetApi="o">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
    </style>
    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="text_size" parent="Widget.AppCompat.Light.PopupMenu">
        <!-- Customize your theme here. -->
        <item name="android:textSize">10sp</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textCursorDrawable">@color/grey</item>
    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/hammersmith_one</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
